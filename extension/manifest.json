{
  "manifest_version": 3,
  "name": "Gmail Communication Guard",
  "version": "1.0",
  "description": "Analyze email tone before sending",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["injected-ui.css"]
    }
  ]
}
