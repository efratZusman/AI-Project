{
  "manifest_version": 3,
  "name": "AI Communication Guard",
  "version": "0.3.0",
  "description": "Tone risk analysis before sending emails and during Gmail chat conversations.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://chat.google.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": [
        "beforeSend/gmailUtils.js",
        "beforeSend/injectedUI.js",
        "beforeSend/contentScript.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://chat.google.com/*"],
      "js": [
        "chatMonitor/lexicon.js",
        "chatMonitor/chatWarnings.js",
        "chatMonitor/chatState.js",
        "chatMonitor/chatHighlighter.js",
        "chatMonitor/chatToggle.js",
        "chatMonitor/chatLegend.js",
        "chatMonitor/chatObserver.js"
      ],
      "css": ["styles.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "AI Communication Guard"
  }
}
